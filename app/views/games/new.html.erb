<ul class="list-group text-center" style="width: 32%; margin-left:26px; margin-top:10px;">
  <li class="list-group-item">
    <% @letters.each do |letter| %>
      <%= letter %>
    <% end %>
  </li>
</ul>

<form action="score" method="post" class="form-inline" style="padding:10px;">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <div class="form-group mx-sm-3 mb-2">
    <input type="text" name="word" class="form-control"  placeholder="Type your best shot!">
  </div>
  <input type="submit" value="Play!" class="btn btn-primary mb-2">
</form>

